<%= provide(:title, "Contact Us")%>

<div class="jumbotron">
      <div class="container">
        <div class="row">
          <div class="col-sm-5">
                <h1>Contact Us</h1>
                <p>This is the contact us page!</p>
          </div>
          <div class="col-sm-7">
           <%= form_tag(blogs_send_email_path , :class => 'form-horizontal')  do %>
              <div class="form-group">
                <%= label_tag 'subject' ,"Subject", :class => 'col-sm-2 control-label' %>
                 <div class="col-sm-10">
                  <%= text_field_tag 'subject',"", :class =>"form-control" %>
                </div>
              </div>
              
              <div class="form-group">
                <%= label_tag 'body','Body' , :class => 'col-sm-2 control-label' %>
                 <div class="col-sm-10">
                  <%= text_area_tag 'body',"", :class =>"form-control" %>
                </div>
              </div>
              
              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= submit_tag 'Send', :class => 'btn btn-primary' %>
                </div>
              </div>
            <% end %>
            
          </div>
        </div>
      </div>
</div>

